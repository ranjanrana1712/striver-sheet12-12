***************print n times using recusion*************
#include<bits/stdc++.h>
using namespace std;

void print(int i,int n){
    if(i>n)
    return ;
    cout<<"raj"<<" ";

    print(i+1,n);

}
int main(){

    int i,n;
    cin>>n;
    print(i,n);
    return 0;
}
Time complexity o(1)
space complexity o(n)

***************linearly from 1 to n **********************
#include<bits/stdc++.h>
using namespace std;

void print(int i,int n){
    if(i>n)
    return ;

    cout<<i<<" ";

    print(i+1,n);

}
int main(){

    int i,n;
    cin>>n;
    print(i,n);
    return 0;
}


***************to print in reverse order*******************

#include<bits/stdc++.h>
using namespace std;
//printing in n order

void f(int i, int n){
    if (i<1)
    return;
    cout<<i<<" ";
    f(i-1,n);


}

int main(){
    int n;
    cin>>n;

    f(n,n);
    return 0;

}

***************print 1 to n using backtracking*******************

#include<bits/stdc++.h>
using namespace std;
//using backtracking 
void f(int i, int n){

    if(i<1)
    return;
    f(i-1,n);
    cout<<i<<endl;
}

int main(){
    int n;
    cin>>n;
    //no using f(i-1,n)
    f(n,n);
    return 0;
}

