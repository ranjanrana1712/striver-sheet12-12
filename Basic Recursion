#include<iostream>
using namespace std;
//creating function
void print(){
    cout<<1<<endl;
    print(); //calling function itself
}

int main(){
    print(); // calling function 
    return 0;
}
************recursion with specified condition******************                       

#include<iostream>
using namespace std;
int cnt=0;
void print(){
    if(cnt == 3) return ;
    cout<<cnt<<endl;
    cnt++;
    print();
}

int main(){
    print();
    return 0;
}
